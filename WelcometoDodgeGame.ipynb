try:
importTkinter,random,time,sys
except:
importtkinterasTkinter,sys,random,time
#--------GamingDisplay-----------
classGameDisplay:
def_init_(self,canvas):
self.canvas=canvas
self.widthlimit=canvas.winfo_screenwidth()
self.heightlimit=canvas.winfo_screenheight()
y2=canvas.winfo_screenheight()-100
y1=y2-15
self.bat=Tkinter.Canvas.create_rectangle(canvas,0,y1,200,y2,fill='deepskyblue4')
self.ball=Tkinter.Canvas.create_oval(canvas,0,0,60,60,fill='yellowgreen')
self.xvelocity=5
self.yvelocity=5
defupdate(self,event=None):
x1,y1,x2,y2=self.canvas.coords(self.ball)
a,b,c,d=self.canvas.coords(self.bat)
k=len(self.canvas.find_overlapping(a,b,c,d))
ifx1<=0:
self.xvelocity=4
self.canvas.move(self.ball,self.xvelocity,0)
pass
elify2>=self.heightlimit:
x=self.canvas.winfo_screenwidth()/2
y=self.canvas.winfo_screenheight()/5
l=self.canvas.winfo_screenwidth()/2.4
m=self.canvas.winfo_screenheight()/2.3
z=self.canvas.winfo_screenwidth()/1.8
time.sleep(2)
self.canvas.create_text(x,y,text='****GAMEOVER****',
font=('msseriff60'),fill='red')
self.canvas.create_text(l,m,text='SCORE:',font=('verdana30'),fill='red')
self.canvas.create_text(z,m,text=str(int(time.perf_counter())-4),font=('arial37
bold'),fill='red')
self.canvas.master.update()
self.canvas.master.update_idletasks()
time.sleep(3)
self.canvas.master.destroy()
sys.exit(0)
pass
elifx2>=self.widthlimit:
self.xvelocity=-9
self.canvas.move(self.ball,self.xvelocity,0)
elify1<=0:
self.yvelocity=4
self.canvas.move(self.ball,0,self.yvelocity)
elifk==2:
self.yvelocity=-11
self.canvas.move(self.ball,0,self.yvelocity)
else:
self.canvas.move(self.ball,self.xvelocity,self.yvelocity)
pass
defupdate_bat(self,event):
direction=event.keysym
x1,x2,y1,y2=self.canvas.coords(self.bat)
ify1>self.widthlimit:
ifdirection=='Left':
self.canvas.move(self.bat,-40,0)
elifx1<0:
ifdirection=='Right':
self.canvas.move(self.bat,40,0)
elifdirection=='Right':
self.canvas.move(self.bat,40,0)
elifdirection=='Left':
self.canvas.move(self.bat,-40,0)
#---------MainWindowGraphic--------
classmain:
def_init_(self):
root=Tkinter.Tk(className='DodgeGame')
w,h=root.winfo_screenwidth(),root.winfo_screenheight()
canvas=Tkinter.Canvas(root,background='black',width=w,height=h)
canvas.pack()
game=GameDisplay(canvas)
forseqin['<Any-KeyPress>']:
root.bind_all(seq,game.update_bat)
whileTrue:
time.sleep(0.01)
game.update()
root.update()
root.update_idletasks()
#=======Trigger'sthegame==============
if_name=='main_':
main()